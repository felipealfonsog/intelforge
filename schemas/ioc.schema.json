{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "IntelForge IOC",
  "type": "object",
  "required": ["type", "value", "first_seen", "sources"],
  "properties": {
    "type": { "type": "string", "enum": ["domain", "ip", "sha256"] },
    "value": { "type": "string", "minLength": 1 },
    "first_seen": { "type": "string" },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "object" }
    },
    "tags": { "type": "array", "items": { "type": "string" } },
    "score": { "type": "number" },
    "verdict": { "type": "string" }
  }
}
